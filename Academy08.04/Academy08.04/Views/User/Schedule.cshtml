@model Academy08._04.Models.Schedule
@{
    ViewBag.Title = "Shedule";
}

<h2>Schedule</h2>

<div>
    @for (int i = 1; i <= 7; i++)
    {
        <table border="1" style="display: inline;">
            @for (int j = 1; j <= 6; j++)
            {
                <tr>
                    <td width="10">
                        @Html.DisplayFor(model => Model.Lesson)
                    </td>
                    <td width="15">
                        @Html.DisplayFor(model => Model.Classroom)
                    </td>
                    <td width="50">
                        @Html.DisplayFor(model => Model.SubjectId)
                    </td>
                </tr>
            }
        </table>
    }
</div>
