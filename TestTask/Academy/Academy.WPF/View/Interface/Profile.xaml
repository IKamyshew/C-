<Window x:Class="Academy.WPF.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile" Height="400" Width="900" FontFamily="Comic Sans MS" Name="WindowProfile" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Background="DarkGray" Height="Auto" Grid.Column="0">
            <Button Name="BtnAdminPanel" Background="LightGray" Margin="3" Click="BtnAdminPanel_Click">AdminPanel</Button>
            <Button Name="BtnSchedule" Background="LightGray" Margin="3" Click="BtnSchedule_Click">Schedule</Button>
            <Button Name="BtnMarks" Background="LightGray" Margin="3" Click="BtnMarks_Click">Marks</Button>
            <Button Name="BtnLogOut" Background="LightGray" Margin="3" Click="BtnLogOut_Click">Log out</Button>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Name="BlockFirstName"/>
            <TextBlock Name="BlockLastName" />
            <TextBlock Name="BlockRole" />
            <TextBlock Name="BlockGroup" />
            
        </StackPanel>

    </Grid>
</Window>
